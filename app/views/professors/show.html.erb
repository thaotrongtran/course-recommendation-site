<p>
        <strong>Professor name:</strong>
        <%= @professor.prof_name %>
</p>
<table>    
<div class="container">
      <div class="row">
          <div class="col-4">
            <strong>Review</strong>
          </div>
          <div class="col-3">
            <strong>Course</strong>
          </div>
          <div class="col-1">
            <strong>Professor rating</strong>
          </div>
          <div class="col-1">
            <strong>Workload rating</strong>
          </div>
          <div class="col-1">
            <strong>Support rating</strong>
          </div>
          
          <div class="col-1">
            <strong>Action</strong>
          </div>
       </div>
    </div>


        <% @professor.reviews.each do |review| %>
    <div class="container">
      <div class="row">
          <div class="col-4">
            <%= review.evaluation %>
          </div>
          <div class="col-3">
            <%= Course.find(review.course_id).course_name %>
          </div>
          <div class="col-1">
            <%= review.prof_rating %>
          </div>
          <div class="col-1">
            <%= review.workload_rating %>
          </div>
          <div class="col-1">
            <%= review.support_rating %>
          </div>
          
          <div class="col-2">
            <%= link_to 'Edit', edit_review_path(review) %>
            <%= link_to 'Destroy', review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
       </div>
    </div>
    <% end %>
</table>  

<strong>Analytics</strong>
        
<table>    
        <div class="container">
              <div class="row">
                  <div class="col-3">
                    <strong>Average professor rating</strong>
                  </div>
          <div class="col-3">
            <strong>Average workload rating</strong>
          </div>
          <div class="col-3">
            <strong>Average support rating</strong>
          </div>
       </div>
       
       <div class="row">
          <div class="col-3">
                        <%= number_with_precision(@professor.reviews.average(:prof_rating), precision: 2) %>

          </div>
         <div class="col-3">
                <%= number_with_precision(@professor.reviews.average(:support_rating), precision: 2) %>


          </div>
          <div class="col-3">
                <%= number_with_precision(@professor.reviews.average(:workload_rating), precision: 2) %>

          </div>
    </div>
    </div>
    </table>

<%= link_to 'Back to all professors', professors_path %>