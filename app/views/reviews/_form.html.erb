<%= form_for @review do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@review.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    Select course: </br>
    <%= f.collection_select(:course_id, Course.all, :id, :course_name ) %>
  </p>

  <p>
    Select professor: </br>
    <%= f.collection_select(:professor_id, Professor.all, :id, :prof_name ) %>
  </p>
 
  <p>
    <%= f.label :evaluation %><br>
    <%= f.text_area :evaluation %><br>
  </p>
  
  <p>
    <%= f.label :prof_rating %><br>
    <%= f.number_field :prof_rating,min: 0, max: 5 %><br>
  </p>
  
  <p>
    <%= f.label :workload_rating %><br>
    <%= f.number_field :workload_rating, min: 0, max: 5 %><br>
  </p>
  
  <p>
    <%= f.label :support_rating %><br>
    <%= f.number_field :support_rating, min: 0, max: 5  %><br>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>